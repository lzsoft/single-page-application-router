{
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"no-console": 0,
		"eqeqeq": 2,
		"no-unused-vars": 0,
		"semi": 2,
		"no-var": 2,
		"no-undef": 2
	}
}